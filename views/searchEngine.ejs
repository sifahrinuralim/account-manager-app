<!-- include header -->
<%-include ('include/_header')%>
<!-- include header -->

<!--Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-user" class="border-shadow">
                <span class="text-gradient">New User<i class="fas fa-user"></i></span>
            </a>
        </div>
            
        <%-include ('include/_searchEngine')%>
        
        <!--Form Handling-->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Position</th>
                        <th>Phone Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= userData['first_name'] %></td>
                        <td><%= userData['last_name'] %></td>
                        <td><%= userData['email'] %></td>
                        <td><%= userData['position'] %></td>
                        <td><%= userData['phone_number'] %></td>
                        <td>
                            <a href="/update-user/<%= userData['id']%>" class="btn border-shadow update">
                                <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                            </a>
                            <a href="/delete-user/<%= userData['id']%>" class="btn border-shadow delete">
                                <span class="text-gradient"><i class="fas fa-times"></i></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</main>
<!--Main Site-->

<!-- include footer -->
<%-include ('include/_footer')%>
<!-- include footer -->